<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    <link rel="stylesheet" runat="server" media="screen" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" runat="server" media="screen" href="~/Content/css/grayscale.min.css" />
      
</head>

<body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <span class="navbar-brand js-scroll-trigger">
                @Html.ActionLink("Accueil", "Index", "Home")
            </span>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" target="_blank" href="http://islamsunnite.net/biographie-imam-malik/">Imam Malicke</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" target="_blank" href="http://islamsunnite.net/biographie-imam-al-boukhari/">Imam Boukhari</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" target="_blank" href="http://khadijamine.centerblog.net/13797-biographie-de-imam-ash-shafi-i">Imam Shafy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" target="_blank" href="https://www.apbif.fr/imam-ahmad-biographie/">Imam Ahmad</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link js-scroll-trigger">
                            @Html.ActionLink("Heritage", "_Index", "User")
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="masthead" style="background-image: url('/Content/images/bg1.jpg');position: relative;width: 100%;height: auto;min-height: 35rem;padding: 15rem 0;background-position: center;background-repeat: no-repeat;background-attachment: scroll;background-size: cover">
        <div class="container d-flex h-100 align-items-center">
            <div class="mx-auto text-center">
                <h1 style="color: #64a19d !important;" class="mx-auto my-0 text-uppercase">LES HERITAGES</h1>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">En Islam suivant les Imams</h2>
                <span class="btn btn-warning js-scroll-trigger" color:#000000 ;">
                    @Html.ActionLink("Bibliotheque", "_Bibliotheque", "Home")
                </span>
            </div>
        </div>
    </header>


    <div class="container body-content">
        @RenderBody()

    </div>
    <!-- Footer-->
    <br />
    <footer class="bg-black small text-center text-white-50">
        <div class="container">
            Copyright &copy; Your Website 2019
        </div>
    </footer>
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/Scripts/js/jquery.easing.compatibility.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/Scripts/js/grayscale.min.js"></script>


</body>
</html>
